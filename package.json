{
  "name": "infuse-ts",
  "description": "A pure TypeScript DI container that supports both decorators and manual registration without relying on experimental features.",
  "version": "0.5.0",
  "license": "MIT",
  "author": "Damian Kraaijeveld",
  "repository": {
    "type": "git",
    "url": "https://github.com/D-Kay6/infuse-ts.git"
  },
  "engines": {
    "node": ">=18.18.2"
  },
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean:dist": "rimraf ./dist",
    "clean:doc": "rimraf ./docs",
    "build": "bun run build:bun",
    "build:bun": "bun run bun.build.mts",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "jest",
    "doc:md": "bun run clean:doc && typedoc src/ --exclude **/*.spec.ts --out docs",
    "doc:json": "bun run clean:doc && typedoc src/ --exclude **/*.spec.ts --json docs/typedoc.json",
    "publish:remote": "bun run clean:dist && bun run build && bun publish",
    "publish:local": "bun run clean:dist && bun run build && bun pm pack"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.21.0",
    "@types/bun": "^1.2.5",
    "@types/cls-hooked": "^4.3.9",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "bun": "^1.2.5",
    "bun-plugin-dts": "^0.3.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-tsdoc": "^0.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.6",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.9",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "dependencies": {
    "cls-hooked": "^4.2.2"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "decorator",
    "dependency-injection",
    "di",
    "inversion-of-control",
    "ioc",
    "container",
    "infuse"
  ]
}
