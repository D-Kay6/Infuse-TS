{
  "name": "infuse-ts",
  "description": "DI-Container using only fully-supported TypeScript features",
  "version": "0.2.3",
  "license": "MIT",
  "author": "Damian Kraaijeveld",
  "repository": {
    "type": "git",
    "url": "https://github.com/D-Kay6/infuse-ts.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "engines": {
    "node": ">=18.18.2"
  },
  "scripts": {
    "clean:dist": "rimraf ./dist",
    "clean:doc": "rimraf ./docs",
    "build": "npm run build:rollup",
    "build:rollup": "rollup --config rollup.config.ts --configPlugin swc3 --bundleConfigAsCjs",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "jest",
    "doc:md": "npm run clean:doc && typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --out docs",
    "doc:json": "npm run clean:doc && typedoc src/ --exclude **/*.spec.ts --target ES6 --mode file --json docs/typedoc.json",
    "publish:remote": "npm run clean:dist && npm run build && npm publish",
    "publish:local": "npm run clean:dist && npm run build && npm pack"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.14.0",
    "@swc/core": "^1.10.14",
    "@swc/helpers": "^0.5.15",
    "@types/cls-hooked": "^4.3.9",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-tsdoc": "^0.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "rollup": "^4.34.6",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-swc3": "^0.12.1",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.0",
    "typedoc": "^0.27.7",
    "typedoc-plugin-markdown": "^4.4.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  },
  "dependencies": {
    "cls-hooked": "^4.2.2"
  },
  "files": ["dist"]
}
